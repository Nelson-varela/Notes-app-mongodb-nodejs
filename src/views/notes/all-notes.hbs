<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card rounded">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{title}} <a href="/notes/edit/{{_id}}"><button type="submit" class="btn btn-primary btn-sm rounded">Edit</button></a>
                        </h4>
                    <p>{{description}}</p>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">

                    <button type="submit" class="btn btn-danger btn-sm rounded">Delete</button>
                    </form>
                </div>
            </div>
        </div>

    {{/each}}
</div>