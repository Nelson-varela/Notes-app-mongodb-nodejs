<div class="col-md-4 mx-auto">
    <div class="card text-center rounded">
        <div class="card-header">
            <h3>New Note</h3>
        </div>
        <div class="card-body rounded">
            <form action="/notes/new-note" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-control rounded" placeholder="Title dark" autofocus>
                </div>
                <div class="form-group">
                    <textarea name="description"  placeholder="Description" class="form-control rounded"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary rounded">Save</button>
                </div>
            </form>
        </div>
    </div>

</div>